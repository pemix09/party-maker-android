<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/event_item_style"
        android:backgroundTint="@color/skyblue"
        android:padding="5dp">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/eventPhoto"/>

        <TextView
            android:id="@+id/eventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/eventPhoto"
            android:gravity="top"
            android:text="Hello"
            android:textStyle="bold"
            android:textColor="@color/darkblue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/eventDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventName"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/eventPhoto"
            android:maxHeight="140dp"
            android:text="Hello description"
            android:textColor="@color/darkblue"/>

        <TextView
            android:id="@+id/musicGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventDescription"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/eventPhoto"
            android:text="Music genre"
            android:textColor="@color/darkblue"/>
        <TextView
            android:id="@+id/eventPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/eventPhoto"
            android:layout_margin="10dp"
            android:layout_below="@id/musicGenre"
            android:text="Place"
            android:textColor="@color/darkblue"/>

    </RelativeLayout>

</LinearLayout>